<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">
    <TextView
        android:id="@+id/status2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/status_height"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        >
        <TextView
            android:id="@+id/status"
            android:layout_width="match_parent"
            android:layout_height="@dimen/status_height"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:scaleType="fitXY"
            android:background="@drawable/back_back"
            />
       <ImageView
           android:id="@+id/drawer_menu_iv"
           android:layout_width="35dp"
           android:layout_height="35dp"
           android:layout_below="@+id/status"
           android:src="@drawable/icon_drawlayout"
           android:paddingBottom="6dp"
           android:paddingTop="5dp"
           android:paddingLeft="8dp"
           />
        <ImageView
            android:id="@+id/alerm_menu_iv"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_below="@+id/status"
            android:layout_alignParentRight="true"
            android:src="@drawable/icon_message"
            android:paddingBottom="6dp"
            android:paddingTop="5dp"
            android:paddingRight="8dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/content"
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/status2"
        android:layout_marginTop="100dp"
        android:background="@drawable/back_main_center"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_main_center"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>
    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="eID保障互联网"
        android:textColor="#696969"
        android:textSize="12sp"
        />
    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text"
        android:layout_centerHorizontal="true"
        android:textColor="#696969"
        android:text="像家一样安心"
        android:textSize="12sp"
        />
    <ImageView
        android:id="@+id/sarch_iv"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:src="@drawable/icon_sarch"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="15dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignTop="@+id/sarch_iv"
        android:layout_alignParentRight="true"
        android:layout_marginRight="23dp"
        android:gravity="center_horizontal"
        >
        <ImageView
            android:id="@+id/fankui_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/icon_fankui"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="反馈"
            android:textSize="10dp"
            android:textColor="#9a9a9a"
            />
    </LinearLayout>
</RelativeLayout>