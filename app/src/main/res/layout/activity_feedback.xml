<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.justin.hzwl.myhzwl.activity.FeedbackActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="33dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:background="#f6f6f6"
    >
    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/icon_suggest"
        android:layout_marginLeft="15dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#474747"
        android:textSize="10sp"
        android:text="请选择相关建议"
        android:layout_marginLeft="7dp"
        />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="15dp"
        android:paddingLeft="23dp"
        android:paddingRight="23dp"
        android:background="#fff"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="31dp"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:gravity="center"
            android:text="无NFC"
            android:layout_marginRight="18dp"
            android:background="@drawable/feedback_item_background"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="31dp"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:gravity="center"
            android:text="贴卡刷不上"
            android:background="@drawable/feedback_item_background"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="12dp"
        android:paddingLeft="23dp"
        android:paddingRight="23dp"
        android:background="#fff"
        android:paddingBottom="15dp"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="31dp"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:gravity="center"
            android:text="使用此eID安全很多"
            android:layout_marginRight="18dp"
            android:background="@drawable/feedback_item_background"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="31dp"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:gravity="center"
            android:text="感应很慢"
            android:background="@drawable/feedback_item_background"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#f6f6f6"
        >
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/icon_write"
            android:layout_marginLeft="15dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#474747"
            android:textSize="10sp"
            android:text="编辑你的相关建议"
            android:layout_marginLeft="7dp"
            />
    </LinearLayout>
    <views.LineEditText
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:maxLines="4"
        android:lines="4"
        android:textSize="14sp"
        android:textColorHint="#cfcfcf"
        android:lineSpacingExtra="20dp"
        android:gravity="top"
        android:hint="谢谢您的宝贵意见，~"
        />
    <TextView
        android:id="@+id/submit_btn"
        android:layout_width="280dp"
        android:layout_height="46dp"
        android:gravity="center"
        android:text="提交"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/white"
        android:background="@drawable/feedback_button_background"
        />
</LinearLayout>
