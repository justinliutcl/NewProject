<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.justin.hzwl.myhzwl.activity.FeedbackActivity">

    <views.BackView
        android:id="@+id/back"
        app:icon_visible="visible"
        app:text="意见反馈"
        android:layout_width="match_parent"
        android:layout_height="@dimen/back_view_height"
        android:background="@color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:background="#f6f6f6"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/icon_suggest" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:text="请选择相关建议"
            android:textColor="#474747"
            android:textSize="10sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="horizontal"
        android:paddingLeft="23dp"
        android:paddingRight="23dp"
        android:paddingTop="15dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="31dp"
            android:layout_marginRight="18dp"
            android:layout_weight="1"
            android:background="@drawable/feedback_item_background"
            android:gravity="center"
            android:text="无NFC"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="31dp"
            android:layout_weight="1"
            android:background="@drawable/feedback_item_background"
            android:gravity="center"
            android:text="贴卡刷不上"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="horizontal"
        android:paddingBottom="15dp"
        android:paddingLeft="23dp"
        android:paddingRight="23dp"
        android:paddingTop="12dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="31dp"
            android:layout_marginRight="18dp"
            android:layout_weight="1"
            android:background="@drawable/feedback_item_background"
            android:gravity="center"
            android:text="使用此eID安全很多"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="31dp"
            android:layout_weight="1"
            android:background="@drawable/feedback_item_background"
            android:gravity="center"
            android:text="感应很慢"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:background="#f6f6f6"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/icon_write" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:text="编辑你的相关建议"
            android:textColor="#474747"
            android:textSize="10sp" />
    </LinearLayout>

    <views.LineEditText
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:gravity="top"
        android:hint="谢谢您的宝贵意见，~"
        android:lineSpacingExtra="20dp"
        android:lines="4"
        android:maxLines="4"
        android:textColorHint="#cfcfcf"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/submit_btn"
        android:layout_width="280dp"
        android:layout_height="46dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/feedback_button_background"
        android:gravity="center"
        android:text="提交"
        android:textColor="@color/white" />
</LinearLayout>
